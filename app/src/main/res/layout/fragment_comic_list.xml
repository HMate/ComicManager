<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bme.aut.comicmanager.ui.browser.ComicListFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/comic_list_empty_text"
        android:id="@+id/comic_list_empty_text"
        android:visibility="gone"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/comic_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        tools:listitem="@layout/comiclist_item_layout"
        android:visibility="visible">
    </android.support.v7.widget.RecyclerView>

</FrameLayout>
