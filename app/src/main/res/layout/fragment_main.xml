<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ui.main.MainActivityFragment"
    tools:showIn="@layout/activity_main"
    android:outlineProvider="bounds">



    <ImageView
        android:layout_width="@dimen/main_recent_covers_width"
        android:layout_height="150dp"
        android:id="@+id/main_recent_cover1"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_example_img"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#909090" />

    <ImageView
        android:layout_width="@dimen/main_recent_covers_width"
        android:layout_height="150dp"
        android:id="@+id/main_recent_cover2"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_example_img"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#909090" />

    <ImageView
        android:layout_width="@dimen/main_recent_covers_width"
        android:layout_height="150dp"
        android:id="@+id/main_recent_cover3"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_example_img"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="#909090" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/main_cover_title_height"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:id="@+id/main_recent_title1"
        android:layout_below="@+id/main_recent_cover1"
        android:layout_alignStart="@+id/main_recent_cover1"
        android:layout_alignEnd="@+id/main_recent_cover1"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/main_cover_title_height"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:id="@+id/main_recent_title2"
        android:layout_below="@+id/main_recent_cover2"
        android:layout_alignStart="@+id/main_recent_cover2"
        android:layout_alignEnd="@+id/main_recent_cover2"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/main_cover_title_height"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:id="@+id/main_recent_title3"
        android:layout_below="@+id/main_recent_cover3"
        android:layout_alignStart="@+id/main_recent_cover3"
        android:layout_alignEnd="@+id/main_recent_cover3"
        android:gravity="center_vertical|center_horizontal" />

    <Button
        android:id="@+id/main_browser_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/main_button_height"
        android:text="@string/goto_browser"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/main_recent_title2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:id="@+id/main_searcher_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/main_button_height"
        android:text="@string/goto_searcher"
        android:layout_below="@+id/main_browser_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
