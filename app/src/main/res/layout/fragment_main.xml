<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ui.main.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_initial_text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/ComicCountText"
        android:id="@+id/ComicCountText"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/ComicCountValue"
        android:layout_marginEnd="24dp"
        android:layout_alignTop="@+id/ComicCountText"
        android:layout_alignEnd="@+id/new_comic_btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_new_comic"
        android:id="@+id/new_comic_btn"
        android:layout_alignBottom="@+id/show_comic_btn"
        android:layout_marginBottom="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/show_comic_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_comic_name"
        android:layout_marginTop="87dp"
        android:layout_below="@+id/main_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />


    <Button
        android:id="@+id/goto_browser_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goto_browser"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/ComicCountText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:id="@+id/goto_searcher_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goto_searcher"
        android:layout_below="@+id/goto_browser_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
